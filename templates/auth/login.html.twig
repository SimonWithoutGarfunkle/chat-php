{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="stack">
    <div class="card">
        <h1>Connexion</h1>
        {% if error %}
            <div class="flash flash-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form method="post" action="{{ path('app_login') }}">
            <div class="field">
                <label for="inputEmail">Email</label>
                <input type="email" id="inputEmail" name="email" value="{{ last_username }}" required autocomplete="email" autofocus>
            </div>

            <div class="field">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" id="inputPassword" name="password" required autocomplete="current-password">
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-primary" type="submit">Se connecter</button>
        </form>

        <p class="muted" style="margin-top:.75rem;">Pas de compte ? <a href="{{ path('app_register') }}">Créer un compte</a></p>
        {% if app.user %}
            <p class="muted">Déjà connecté en tant que {{ app.user.userIdentifier }}. <a href="{{ path('app_logout') }}">Se déconnecter</a>.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
